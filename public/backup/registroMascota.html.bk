        <p id="signUpError"></p>-->

        
        <!-- barra para ingresar email y password -->
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" pattern="[A-Z,a-z]*" type="text" id="nombre">
            <label class="mdl-textfield__label" for="nombre">Nombre:</label>
            <span class="mdl-textfield__error">Solo se pueden agregar letras</span>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input"  type="text" id="edad">
            <label class="mdl-textfield__label" for="edad">Edad:</label>
            <span class="mdl-textfield__error">Solo se pueden agregar letras</span>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" id="historia">
            <label class="mdl-textfield__label" for="historia">Cuentanos sobre tu mascota:</label>
            <span class="mdl-textfield__error">Solo se pueden agregar letras</span>
          </div>
          <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="text" id="adoptado">
            <label class="mdl-textfield__label" for="adoptado">¿Adoptaste a tu mascota? ¿cuentanos donde?:</label>
            <span class="mdl-textfield__error">Solo se pueden agregar letras</span>
          </div>
          <div>
            <input type="file" value="upload" name="file" id="btnUpload" class="mdl-button mdl-js-button"multiple></input>
            </div>
          </div>
          <!-- FIN barra para ingresar email y password -->

      </div>
      <div class="mdl-dialog__actions">
      <!-- BOTONES PARA INGRESAR Y CREAR CUENTA  -->
        

        <button id="formularioMascotaBtn" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect">Sign up</button>

        <div id="loginProgress" class="mdl-spinner mdl-js-spinner is-active"></div>
    
      </div>
    </dialog>




	<div class="login-cover">
    <div class="page-loader mdl-spinner mdl-js-spinner is-active"></div>
  </div>

    <!-- MAIN PAGE CONTENT -->

    <div class="mdl-layout mdl-js-layout">
      <header class="mdl-layout__header">
        <div class="mdl-layout-icon"></div>
        <div class="mdl-layout__header-row">
          <span class="mdl-layout__title">My Pet
            <span class="page-title-span"> | </span>
            <span class="page-title-span"> Home </span>
          </span>
          <div class="mdl-layout-spacer"></div>
          <nav class="mdl-navigation">

          <button id="signOutBtn" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect"><i class="material-icons mdl-js-ripple-effect">exit_to_app</i>
            Sign Out
          </button>

          </nav>
        </div>
      </header>
      <div class="mdl-layout__drawer">
      </div>
    </div>

    <!-- INGRESAR LAS FOTOS -->
<script>
  var cedula=localStorage.getItem("cedula");
  btnUpload.addEventListener('change',function(e) {
      //var user = firebase.auth().currentUser;

      var file = e.target.files;
    var cont = 0;
    //var file = $("#file").val();

      for(var i=0; i<e.target.files.length; i++){
        cont++;
      }
        if(cont>3)
        {
          alert("no puede subir ams de 3 fotos");
        }
        else
        {
          for(var i=0; i<e.target.files.length; i++)
          {
            var storageRef = firebase.storage().ref('fotos/'+cedula+'/'+file[i].name);
            storageRef.put(file[i]);
          }
        }
  });
</script>


